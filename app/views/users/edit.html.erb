<% provide :title, t(".edit_profile") %>
<h1><%= t ".edit_profile" %></h1>
<hr>
<div class="row">
  <%= form_for @user, multipart: true, class: "form-horizontal" do |f| %>
  <%= render 'shared/form_errors', object: @user %>
    <div class="col-md-3">
      <div class="text-center">
        <%= image_tag @user.avatar.medium.url %>
        <h6><%= t ".upload_image  " %></h6>
        <%= f.file_field :avatar, class: "form-control" %>
      </div>
    </div>

    <div class="col-md-9 personal-info">
      <h3><%= t ".profile_info" %></h3>
      <div class="form-group row">
        <%= f.label :name, class: "col-lg-3 control-label" %>
        <div class="col-lg-8">
          <%= f.text_field :name, class: "form-control" %>
        </div>
      </div>

      <div class="form-group row">
        <%= f.label :email, class: "col-lg-3 control-label" %>
        <div class="col-lg-8">
          <%= f.email_field :email, class: "form-control" %>
        </div>
      </div>

      <div class="form-group row">
        <label class="col-md-3 control-label"></label>
        <div class="col-lg-8">
          <%= f.submit t(".save_change"), class: "btn btn-primary" %>
        </div>
      </div>

    </div>
  <% end %>
</div>


