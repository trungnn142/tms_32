<% provide :title, t("application.general.login") %>
<div class="row">
  <div class="col-md-12">
    <div class="col-md-6 login-panel">
      <h1><%= t "Login" %></h1>
      <div class="panel panel-default">
        <div class="panel-heading"><%= t "application.general.login" %></div>
        <div class="panel-body">
          <%= form_for :session, url: login_path, class: "form-horizontal" do |f| %>
            <div class="form-group">
              <%= f.label :email, class: "col-sm-3 control-label" %>
              <div class="col-sm-9">
                <%= f.email_field :email, class: "form-control",
                  placeholder: t(".email") %>
              </div>
            </div>

            <div class="form-group">
              <%= f.label :password, class: "col-sm-3 control-label" %>
              <div class="col-sm-9">
                <%= f.password_field :password, class: "form-control",
                  placeholder: t(".password") %>
              </div>
            </div>

            <div class="form-group">
              <div class="col-offset-3 col-sm-9">
                <div class="checkbox">
                  <label class="">
                    <%= f.check_box :remember %><%= t ".remember_me" %>
                  </label>
                </div>
              </div>
            </div>

            <div class="form-group last">
              <div class="col-offset-3 col-sm-9">
                <%= f.submit t "application.general.login", class: "btn btn-success btn-sm" %>
              </div>
            </div>
          <% end %>
        </div>
        <div class="panel-footer">
        </div>
      </div>
    </div>
  </div>
</div>

